{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // Node-miljø for vite.config.ts
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],

    // Praktisk for ESM- og TS-miljø
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Strenghet (du kan beholde disse om du vil)
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["vite.config.ts"]
}