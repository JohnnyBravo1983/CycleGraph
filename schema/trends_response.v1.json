{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/trends_response.v1.json",
  "title": "TrendsResponse",
  "description": "API-respons fra /api/trends for TrendsChart. Må støtte tom struktur.",
  "type": "object",
  "additionalProperties": false,
  "required": ["from", "to", "bucket", "data"],
  "properties": {
    "from": { "type": "string", "format": "date" },
    "to": { "type": "string", "format": "date" },
    "bucket": { "type": "string", "enum": ["day", "week", "month"] },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["date", "avg_watt"],
        "properties": {
          "date": { "type": "string", "format": "date" },
          "avg_watt": { "type": "number", "minimum": 0 }
        }
      }
    },
    "schema_version": {
      "type": "string",
      "description": "Må være kompatibel med v0.7.x.",
      "pattern": "^0\\.7\\.[0-9]+$"
    }
  }
}
