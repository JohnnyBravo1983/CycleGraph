{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/session_metrics.v1.json",
  "title": "SessionMetrics",
  "description": "Aggregerte målinger per økt. Benyttes som input til daglig aggregering.",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_id", "date", "avg_watt", "duration_min"],
  "properties": {
    "user_id": { "type": "string", "minLength": 1 },
    "date": { "type": "string", "format": "date" },
    "avg_watt": { "type": "number", "minimum": 0 },
    "duration_min": { "type": "number", "minimum": 0 },
    "schema_version": {
      "type": "string",
      "description": "Må være kompatibel med v0.7.x.",
      "pattern": "^0\\.7\\.[0-9]+$"
    }
  }
}
