{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/session_metrics.v1.json",
  "title": "SessionMetrics",
  "description": "Aggregerte målinger per økt. Benyttes som input til daglig aggregering.",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_id", "date", "avg_watt", "duration_min"],
  "properties": {
    "user_id": { "type": "string", "minLength": 1 },
    "date": { "type": "string", "format": "date" },
    "avg_watt": { "type": "number", "minimum": 0 },
    "duration_min": { "type": "number", "minimum": 0 },

    "bike_type": { "type": "string" },
    "bike_weight": { "type": "number", "minimum": 0 },
    "tire_width": { "type": "number", "minimum": 10 },
    "tire_quality": { "type": "string" },
    "crr_used": { "type": "number", "minimum": 0 },
    "rider_weight": { "type": "number", "minimum": 0 },
    "bike_name": { "type": "string" },

    "precision_watt": { "type": "number" },
    "precision_watt_ci": { "type": "number", "minimum": 0 },

    "weather_applied": { "type": "boolean" },
    "wind_angle_deg": { "type": "number", "minimum": 0, "maximum": 180 },
    "air_density_kg_per_m3": { "type": "number", "minimum": 0.9, "maximum": 1.5 },

    "publish_state": {
      "type": "string",
      "enum": ["none", "pending", "published", "failed"],
      "default": "none"
    },
    "publish_hash": { "type": "string" },
    "published_to_strava": { "type": "boolean", "default": false },
    "publish_time": { "type": "string", "format": "date-time" },

    "schema_version": {
      "type": "string",
      "description": "Må være kompatibel med v0.7.x.",
      "pattern": "^0\\.7\\.[0-9]+$"
    }
  }
}
