{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/profile.v1.json",
  "title": "Profile",
  "description": "Brukerprofil. Samtykke-felter (valgfrie) følger samme schema_version-regime som øvrige v1-skjemaer.",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_id", "schema_version"],
  "properties": {
    "user_id": { "type": "string", "minLength": 1 },
    "consent_version": { "type": "string" },
    "consent_time": { "type": "string", "format": "date-time" },
    "schema_version": {
      "type": "string",
      "description": "Må være kompatibel med v0.7.x.",
      "pattern": "^0\\.7\\.[0-9]+$"
    }
  }
}